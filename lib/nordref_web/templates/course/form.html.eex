<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :max_participants %>
  <%= number_input f, :max_participants %>
  <%= error_tag f, :max_participants %>

  <%= label f, :max_per_club %>
  <%= number_input f, :max_per_club %>
  <%= error_tag f, :max_per_club %>

  <%= label f, :organizer_participants %>
  <%= number_input f, :organizer_participants %>
  <%= error_tag f, :organizer_participants %>

  <%= label f, :type %>
  <%= select f, :type, @types, prompt: "Bitte wÃ¤hle einen Typen" %>
  <%= error_tag f, :type %>

  <%= label f, :date %>
  <%= date_select f, :date %>
  <%= error_tag f, :date %>

  <%= label f, :released %>
  <%= checkbox f, :released %>
  <%= error_tag f, :released %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
